{# bloque del contenido de cada vista #}
{% block contenido %}
<div class="container bg-secondary bg-opacity-10">
    <div class="row text-center">
        <h1> Bievenido | {{ session.nombres }}</h1>
    </div>
    <div class="row justify-content-center justify-content-md-center ">
        <div class="col-md-4">
            <a href="/reportar" class="btn btn-danger w-100 my-2">Reportar</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h2>Mis reportes</h2>
            <hr>
        </div>
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-borderless table-light align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Tipo</th>
                            <th>Fecha</th>
                            <th>Estado</th>
                            <th>Estado</th>
                        </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            {% for row, reporte in reportes %}
                            <tr class="table-light" >
                                <td scope="row">{{row + 1}}</td>
                                <td>{{ reporte.tipo }}</td>
                                <td>{{ reporte.created_at }}</td>
                                <td>{{ reporte.id_notificacion }}</td>
                                <td>{{ reporte.estado }}</td>
                            </tr>
                            {% endfor %}
        
                        </tbody>
                </table>
            </div>
        </div>
    </div>
    
</div>
{% endblock contenido %}

{% block footer %}
{{ parent() }}
{% endblock footer %}

{% block scripts %}
	{{ parent() }}
	<script>
        $('.estado').change(function (e) { 
            e.preventDefault();
            let obj = e.target
            let id = obj.getAttribute('id')
            let estado = obj.value

            $.ajax({
                type: "post",
                url: "/notificaciones/update",
                data: {
                    id,
                    estado
                },
                dataType: "json",
                success: function (response) {
                    //dispara alerta
                    Swal.fire({
                        title: 'Aviso',
                        text: response.responseMessage,
                        icon: response.tipoRespuesta,
                        confirmButtonText: 'OK',
                        allowOutsideClick: false,
                        allowEscapeKey: false,
                        allowEnterKey: true
                    }).then((result) => {
                        if (result.isConfirmed) {
                            location.reload();
                        }
                    })

                }
            });
        });

    </script>
{% endblock scripts %}