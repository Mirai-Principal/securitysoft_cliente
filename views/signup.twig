{% extends "main.twig" %}
{% block title %}
	Registrar |
	{{ parent() }}
{% endblock %}

{% block styles %}
	<style>

	</style>
{% endblock %}

{# bloque del contenido de cada vista #}
{% block contenido %}
	<div class="container vh-100 bg-secondary bg-opacity-10">
		<div class="row text-center">
			<div class="col">
				<h1>Nuevo cliente</h1>
			</div>
		</div>
		<div class="row card_container w-100 justify-content-md-center align-items-center">
			<div class="col-md-6 text-center">
				<div class="card">
					<div class="text-center">
						<img src="../public/uploads/logo.jpg" class="card-img-top w-50" alt="...">
					</div>
					<div class="card-body text-center">
						<form action="/signup" method="post">
							<input type="text" placeholder="Nombres" class="form-control" name="nombres" required>
							<input type="text" placeholder="Cédula" pattern="[0-9]{10}" minlength="10" maxlength="10" title="Debe tener 10 digitos Ej: 0287654321" class="form-control" name="cedula" required>
							<input type="text" placeholder="Telefono" pattern="[0-9]{10}" minlength="10" maxlength="10" title="Debe tener 10 digitos Ej: 0987654321" class="form-control" name="telefono" required>
							<input type="password" placeholder="Contraseña" class="form-control" name="password" required>
							<input type="submit" value="Registrar" class="btn btn-primary form-control w-50 mt-4">
						</form>
					</div>
				</div>
				<input type="button" value="Regresar" onclick="window.history.back()" class="btn btn-outline-info w-50 my-1">
			</div>


		</div>
	</div>


{% endblock contenido %}

{% block footer %}
	{{ parent() }}
{% endblock footer %}

{% block scripts %}
	{{ parent() }}
	<script>
		{{ responseMessage|raw }}
    </script>
{% endblock scripts %}
